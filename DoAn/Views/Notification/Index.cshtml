@model List<DoAn.Notification>
@{
    ViewBag.Title = "Thông báo";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h2 class="mt-3">Thông báo của bạn</h2>

@if (!Model.Any())
{
    <p class="text-muted">Chưa có thông báo nào.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>STT</th>
                <th>Nội dung</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var n = Model[i];
                <tr class="@(n.IsRead == true ? "" : "table-warning")">
                    <td>@(i + 1)</td>
                    <td>@n.Message</td>
                    <td>@n.CreatedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (n.IsRead == true)
                        {
                            <span class="badge bg-success">Đã đọc</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Chưa đọc</span>
                        }
                    </td>
                    <td>
                        @if (!n.IsRead == true)
                        {
                            <button class="btn btn-sm btn-primary me-1 mark-read" data-id="@n.NotificationId">Đánh dấu đã đọc</button>
                        }
                        <button class="btn btn-sm btn-danger delete-notification" data-id="@n.NotificationId">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        $(function() {
            // Mark as Read
            $(".mark-read").click(function() {
                var id = $(this).data("id");
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.post('@Url.Action("MarkAsRead")', { notificationId: id, __RequestVerificationToken: token }, function(res) {
                    if (res.success) location.reload();
                    else alert(res.message);
                });
            });

            // Delete
            $(".delete-notification").click(function() {
                if (!confirm("Bạn có chắc muốn xóa thông báo này?")) return;
                var id = $(this).data("id");
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.post('@Url.Action("Delete")', { notificationId: id, __RequestVerificationToken: token }, function(res) {
                    if (res.success) location.reload();
                    else alert(res.message);
                });
            });
        });
    </script>
}
