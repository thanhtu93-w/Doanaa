@model List<DoAn.Notification>
@{
    ViewBag.Title = "Notifications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh sách Thông báo</h2>
        <a class="btn btn-primary" href="@Url.Action("Create","Notification")">Tạo Thông báo mới</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Nội dung</th>
                <th>Ngày tạo</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var n in Model)
            {
                <tr>
                    <td>@n.Message</td>
                    <td>
                        @(n.CreatedAt?.ToLocalTime().ToString("g"))
                    </td>
                    <td>
                        <form asp-action="Delete" asp-controller="Notification" method="post" style="display:inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="notificationId" value="@n.NotificationId" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa thông báo này?');">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
