@model DoAn.Models.CreateClassViewModel
@{
    ViewBag.Title = "Tạo lớp mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tạo lớp Group Class</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@using (Html.BeginForm("CreateClass", "Trainer", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label>Tên lớp</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Tên lớp" })
    </div>

    <div class="form-group mb-3">
        <label>Mô tả</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "3" })
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label>Giờ bắt đầu</label>
            @Html.TextBoxFor(m => m.TimeFrom, "{0:HH:mm}", new
            {
                @class = "form-control",
                type = "time"
            })
        </div>

        <div class="col-md-6 mb-3">
            <label>Giờ kết thúc</label>
            @Html.TextBoxFor(m => m.TimeTo, "{0:HH:mm}", new
            {
                @class = "form-control",
                type = "time"
            })
        </div>
    </div>

    <div class="form-group mb-3">
        <label>Lịch lặp lại</label>
        <select name="RecurrenceDays" class="form-control">
            <option value="2,4,6">Thứ 2 - 4 - 6</option>
            <option value="3,5,7">Thứ 3 - 5 - 7</option>
        </select>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label>Duration (phút)</label>
            @Html.TextBoxFor(m => m.DurationMinutes, new { @class = "form-control", type = "number" })
        </div>

        <div class="col-md-6 mb-3">
            <label>Capacity</label>
            @Html.TextBoxFor(m => m.Capacity, new { @class = "form-control", type = "number" })
        </div>
    </div>

    <div class="form-check mb-3">
        @Html.CheckBoxFor(m => m.IsFeatured, new { @class = "form-check-input" })
        <label class="form-check-label">Nổi bật</label>
    </div>

    <button type="submit" class="btn btn-primary">Đề xuất lớp</button>
}
