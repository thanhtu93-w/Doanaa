@model DoAn.Package
@{
    ViewBag.Title = "Chỉnh sửa gói tập";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Chỉnh sửa gói tập</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@using (Html.BeginForm("EditPackage", "Package", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.PackageId)

    <div class="mb-3">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.PackageType)
        @Html.DropDownListFor(m => m.PackageType, new SelectList(new[] { "Group", "PT" }, Model.PackageType), "Chọn loại", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PackageType, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.TotalSessions)
        @Html.TextBoxFor(m => m.TotalSessions, new { @class = "form-control", type = "number", min = 1 })
        @Html.ValidationMessageFor(m => m.TotalSessions, "", new { @class = "text-danger" })
    </div>

    <div class="form-check mb-3">
        @Html.CheckBox("IsFeatured", Model.IsFeatured ?? false, new { @class = "form-check-input" })
        @Html.Label("IsFeatured", "Nổi bật", new { @class = "form-check-label" })
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a href="@Url.Action("ManagePackages", "Package")" class="btn btn-secondary">Hủy</a>
}
