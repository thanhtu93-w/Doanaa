@model List<DateTime>
@{
    var classId = ViewBag.ClassId;
}

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Ngày</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var date = Model[i];
            var dayOfWeek = date.ToString("dddd"); // tên thứ
            <tr>
                <td>@date.ToString("dd/MM/yyyy") (@dayOfWeek)</td>
                <td>
                    <button class="btn btn-sm btn-primary" onclick="$('#detail-@i').toggle();">
                        Xem chi tiết
                    </button>
                </td>
            </tr>
            <tr id="detail-@i" style="display:none">
                <td colspan="3">
                    @{ Html.RenderAction("_AttendanceHistoryDetail", new { classId = classId, classDate = date }); }
                </td>
            </tr>
        }
    </tbody>
</table>
