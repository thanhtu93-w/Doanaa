@model DoAn.Models.TrainerProfileViewModel

@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Thông tin cá nhân</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <!-- Avatar -->
            <img src="@(Model.Avatar ?? Url.Content("~/Content/Images/default-avatar.png"))"
                 class="img-thumbnail mb-3" style="width:200px; height:200px; object-fit:cover; border-radius:50%;" />

            <!-- Info view -->
            <div id="profileView">
                <p><strong>Username:</strong> @Model.Username</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                <p><strong>Full Name:</strong> @Model.FullName</p>
                <p><strong>Gender:</strong> @Model.Gender</p>
                <p><strong>Birth Date:</strong> @(Model.BirthDate?.ToString("yyyy-MM-dd"))</p>
                <p><strong>Address:</strong> @Model.Address</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Specialties:</strong> @Model.Specialties</p>
                <p><strong>Experience:</strong> @(Model.ExperienceYears.HasValue ? Model.ExperienceYears.Value + " năm" : "Chưa cập nhật")</p>

                <button id="btnEditProfile" class="btn btn-primary mt-3">Cập nhật</button>
            </div>

            <!-- Form edit hidden -->
            <div id="profileForm" style="display:none; text-align:left; margin-top:20px;">
                @using (Html.BeginForm("Profile", "Trainer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.UserId)

                    <div class="form-group">
                        <label>Đổi ảnh đại diện</label>
                        <input type="file" name="AvatarFile" class="form-control" />
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.FullName)
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Gender)
                        @Html.DropDownListFor(m => m.Gender,
                            new SelectList(new[] { "Male", "Female", "Other" }, Model.Gender),
                            "Chọn giới tính",
                            new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.BirthDate)
                        @Html.TextBoxFor(m => m.BirthDate, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Address)
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Description)
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Specialties)
                        @Html.TextAreaFor(m => m.Specialties, new { @class = "form-control", rows = 2 })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ExperienceYears)
                        @Html.TextBoxFor(m => m.ExperienceYears, new { @class = "form-control", type = "number", min = "0" })
                    </div>

                    @Html.HiddenFor(m => m.Email)
                    @Html.HiddenFor(m => m.PhoneNumber)

                    <button type="submit" class="btn btn-success mt-2">Lưu thay đổi</button>
                    <button type="button" id="btnCancelEdit" class="btn btn-secondary mt-2">Hủy</button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $("#btnEditProfile").click(function () {
                $("#profileView").hide();
                $("#profileForm").slideDown();
            });

            $("#btnCancelEdit").click(function () {
                $("#profileForm").slideUp();
                $("#profileView").slideDown();
            });
        });
    </script>
}
